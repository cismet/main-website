<div id="refs" class="container">
            <br>
            <div  class="marketing">
                <h1><%=I18n.t("projects.title")%></h1>
            </div>

            <div style="width:1000px" class="hidden-phone hidden-tablet imagegrayscaling">
            <% I18n.t("projects.list").each do |row|%>
            <div>
                <% row["columns"].each do |project|%>

                   <div class="mosaic-block<%= project["half_or_empty_when_full"] %> bar2">
                        <div class="mosaic-overlay">
                            <a data-toggle="modal" href="#<%= project["id"] %>Modal" target="_blank" class="mosaic-overlay" >
                                <div class="mosaicdetails imagegrayscaling">
                                    <h4><%= project["title"] %></h4><br/>
                                    <p><%= project["subtitle"] %></p>
                                </div>
                            </a>
                        </div>
                        <div class="mosaic-backdrop">
				<% if project["half_or_empty_when_full"].nil? then @xxx="l" else @xxx="p" end %>            
				<%= image_tag  "projects/"+project["id"]+"_"+@xxx+".png" %>
                        </div>

                    </div>  

                <% end %>

            </div>
            <% end %>
        </div>









             <br><br><br><br><br>
            <br><br><br><br><br>

            <div>
<% I18n.t("projects.list").each do |row|%>        
                <% row["columns"].each do |project|%>
                     <div id="<%= project["id"]%>Modal" class="modal hide fade" >
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3><%= project["modaltitle"]%></h3>
            </div>
            <div class="modal-body" style="background-image: url(<%=image_path("projects/blurred/"+project["id"]+".png")%>)" > 
                <%= image_tag  "projects/screener/"+project["id"]+".png" , :align => 'right', :style => 'padding: 15px;'%>

                
                <h4><%= project["modalsubtitle"]%></h4>
                <p ><%= project["modalparagraph"]%></p>

                <h4><%= project["modalsecondsubtitle"]%></h4>
                <p >
                    <br>
                    <% project["modallinks"].each do |link| %>
                        <a href="<%= link["link"] %>" target="_new" class="btn"  ><i class="<%= link["icon"] %>"></i><%= link["title"] %></a>
                    <% end %>

                </p>

                <hr>

                <h4><%= project["modalcustomertitle"]%></h4>
                <p><%= project["modalcustomerparagraph"]%></p>

            </div>
            <div class="modal-footer">
                <a href="#" class="btn" data-dismiss="modal" ><%=I18n.t("menu.close")%></a>
            </div>
        </div>

                <% end %>
            <% end %>
            </div>

           
</div>

