<div id="jobs"   class="container" >
	<br>
	<div  class="marketing">
		<h1><%=I18n.t("jobs.title")%></h1>
	</div>
	<% I18n.t("jobs.facts").each do |row|%>
		<div class="row">
			<% row[:columns].each do |fact|%>

				<div class="span<%=      row[:width]%>">
					<%= image_tag fact[:icon], :class => 'bs-icon' %>
					<h2><%= fact[:title] %></h2>
					<p><%= fact[:paragraph] %>
					</p>
				</div>

			<% end %>

		</div>
	<% end %>
	<div  class="marketing">
	<h1><%=I18n.t("jobs.title2")%></h1>
	<!-- align center -->
		

	<h2 style="text-align: center;" ><%=I18n.t("jobs.action")%></h2>
</div>
</div>
<div align='center' style="margin:50px;" class="hidden-phone">
	<a href='#contact' class="animate"><%= image_tag 'down.png' %></a>
</div>

<br>
<div class="text-center hidden-desktop hidden-tablet">
	<a href="#start" class="animateZOS btn btn-inverse btn-large" type="button"><i class="icon-home icon-white"></i></a>
	<a href="#refs" class="animateZOS btn btn-inverse btn-large" type="button"><i class="icon-road icon-white"></i></a>
	<a href="#services" class="animateZOS btn btn-inverse btn-large" type="button"><i class="icon-check icon-white"></i></a>
	<a href="#contact" class="animateZOS btn btn-inverse btn-large" type="button"><i class="icon-envelope icon-white"></i></a>
</div>



